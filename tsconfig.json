{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "es2015",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist",
        "lib": [
            "DOM",
            "ESNext",
            "ESNext.AsyncIterable"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
